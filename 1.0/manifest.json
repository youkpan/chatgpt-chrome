{
  "manifest_version": 3,
  "name": "ChatGPT - Right click to use!",
  "description": "Quick access ChatGPT,select content & right click using ChatGPT everywhere",
  "version": "3.5",
  "host_permissions": [
    "https://api.openai.com/*"
  ],
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "contextMenus",
    "storage"
  ],
  "author": "telfordpan@gmail.com"
}